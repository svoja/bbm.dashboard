<div class="card shadow-sm p-4">
    <h5 class="gradient-text mb-4">จำนวนนักเรียนในแต่ละวิชา</h5>
    <canvas id="subjectChart"></canvas>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('subjectChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: <%- JSON.stringify(subjects) %>,
            datasets: [{
                label: 'จำนวนนักเรียน',
                data: <%- JSON.stringify(studentCounts) %>,
                backgroundColor: [
                    '#003367',  // ว่ายน้ำ
                    '#3400AE',  // เปียโน
                    '#AE0000',  // ตีกลอง
                    '#007bff',  // ติวเตอร์
                    '#4B0082',  // กีต้าร์
                    '#800000',  // เครื่องสาย
                    '#006400'   // ร้องเพลง
                ],
                borderRadius: 6,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    labels: {
                        font: {
                            family: 'Kanit'
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#e0e0e0'
                    },
                    ticks: {
                        font: {
                            family: 'Kanit'
                        }
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: {
                            family: 'Kanit'
                        }
                    }
                }
            }
        }
    });
});
</script>